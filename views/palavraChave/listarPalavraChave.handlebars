<form method="get" action="/listarPalavraChave" class="mb-3 d-flex" style="gap: 8px;">
    <input type="text" name="palavra" class="form-control" placeholder="Buscar por palavra..." value="{{filtroPalavra}}">
    <button type="submit" class="btn btn-primary btn-sm">Buscar</button>
    <a href="/listarPalavraChave" class="btn btn-secondary btn-sm">Limpar</a>
</form>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Palavra</th>
            <th scope="col">Editar</th>
            <th scope="col">Deletar</th>
        </tr>
    </thead>
    <tbody>
        {{#each palavras}}
        <tr>
            <th scope="row">{{palavra}}</th>
            <td><a href="editarPalavraChave/{{id}}">Editar</a></td>
            <td><a href="excluirPalavraChave/{{id}}">Deletar</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>

<div class="mt-3 d-flex justify-content-between">
    <a href="/listarPalavraChave?pagina={{subtract paginaAtual 1}}" class="btn btn-outline-secondary btn-sm">Anterior</a>
    <a href="/listarPalavraChave?pagina={{add paginaAtual 1}}" class="btn btn-outline-secondary btn-sm">Pr√≥xima</a>
</div>