<h2 class="mb-5 text-center text-primary fw-bold">Palavras-chave do Sistema</h2>

<form method="get" action="/listarPalavraChave" class="mb-3 d-flex" style="gap: 8px;">
    <input type="text" name="palavra" class="form-control" placeholder="Buscar por palavra..." value="{{filtroPalavra}}">
    <button type="submit" class="btn btn-primary btn-sm">Buscar</button>
    <a href="/listarPalavraChave" class="btn btn-secondary btn-sm">Limpar</a>
</form>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Palavra</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        {{#each palavras}}
        <tr>
            <td scope="row">{{palavra}}</td>
            <td><a href="editarPalavraChave/{{id}}"  class="text-decoration-none text-primary">Editar</a></td>
            <td><a href="excluirPalavraChave/{{id}}"  class="text-decoration-none text-danger">Excluir</a></td> 
        </tr>
        {{/each}}
    </tbody>
</table>

<div class="mt-3 d-flex justify-content-between">
    {{#if (gt paginaAtual 1)}}
        <a href="/listarPalavraChave?pagina={{subtract paginaAtual 1}}&palavra={{filtroPalavra}}" class="btn btn-outline-secondary btn-sm">Anterior</a>
    {{else}}
        <span class="btn btn-outline-secondary btn-sm disabled">Anterior</span>
    {{/if}}

    <span>Página {{paginaAtual}} de {{totalPaginas}}</span>

    {{#if (lt paginaAtual totalPaginas)}}
        <a href="/listarPalavraChave?pagina={{add paginaAtual 1}}&palavra={{filtroPalavra}}" class="btn btn-outline-secondary btn-sm">Próxima</a>
    {{else}}
        <span class="btn btn-outline-secondary btn-sm disabled">Próxima</span>
    {{/if}}
</div>
