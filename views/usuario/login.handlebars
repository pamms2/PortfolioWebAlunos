<div class="container">
    <div class="col-lg-4 col-md-6">
    {{#if mensagemErro}}
        <div class="alert alert-danger" role="alert">
            {{mensagemErro}}
        </div>
    {{/if}}
    </div>
</div>
<div class="container">
        <div class="col-lg-4 col-md-6">

            <div class="card shadow-sm">
                <div class="card-body p-4">

                    <h4 class="text-center mb-4">Autenticação</h4>
                    <form action="/login" method="post">
                        <div class="form-group">
                            <label for="inputLogin">Login</label>
                            <input type="text" class="form-control" id="inputLogin" name="login" required>
                        </div>
                        <div class="form-group">
                            <label for="inputSenha">Senha</label>
                            <input type="password" class="form-control" id="inputSenha" name="senha" required>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block mt-4">Logar</button>
                    </form>

                </div>
            </div>

            <div class="text-center mt-3">
                <a href="/principal">Voltar à página principal</a>
            </div>
        </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', (event) => {
        const alerta = document.getElementById('alerta-erro');
        if (alerta) {
            const urlLimpa = window.location.href.split('?')[0];
            window.history.replaceState({}, document.title, urlLimpa);
        }
    });
</script>