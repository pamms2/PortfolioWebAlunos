{{#if externo}}
    <h2>Relatório de Proporção Alunos por Conhecimento</h2>
{{/if}}

<form method="get" action="/listarConhecimento" class="mb-3 d-flex" style="gap: 8px;">
    <input type="text" name="titulo" class="form-control" placeholder="Buscar por título de conhecimento..." value="{{filtroTitulo}}">
    <button type="submit" class="btn btn-primary btn-sm">Buscar</button>
    <a href="/listarConhecimento" class="btn btn-secondary btn-sm">Limpar</a>
</form>

<table class="table">
    <thead>
        <tr>
        <th scope="col">Título</th>
        {{#if admin}}
            <th scope="col">Editar</th>
            <th scope="col">Deletar</th>
        {{else}}
            {{#if aluno}}
            <th scope="col">Nível</th>
            {{else}}
            <th scope="col">Quantidade de Alunos</th>
            {{/if}}
        {{/if}}
        </tr>
    </thead>
    <tbody>
        {{#each conhecimentos}}
        <tr>
            <th scope="row">{{titulo}}</th>
            {{#if ../admin}}
                <td><a href="/editarConhecimento/{{id}}">Editar</a></td>
                <td><a href="/excluirConhecimento/{{id}}">Deletar</a></td>
            {{/if}}
            {{#if ../aluno}}
                <td>
                <form action="/salvarNota" method="post">
                    <input type="hidden" name="idConhecimento" value="{{id}}">
                    <input type="number" name="nota" min="0" max="10" required placeholder="0 a 10">
                    <button type="submit">Salvar</button>
                </form>
                </td>
            {{/if}}
            {{#if ../externo}}
                <!-- mostrar uma variavel na tela que não vem do bd -->
            {{/if}}
        </tr>
        {{/each}}
    </tbody>
</table>

<div class="mt-3 d-flex justify-content-between">
    <a href="/listarConhecimento?pagina={{subtract paginaAtual 1}}" class="btn btn-outline-secondary btn-sm">Anterior</a>
    <a href="/listarConhecimento?pagina={{add paginaAtual 1}}" class="btn btn-outline-secondary btn-sm">Próxima</a>
</div>